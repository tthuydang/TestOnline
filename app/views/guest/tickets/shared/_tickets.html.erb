<div class=" col-12 col-sm-6 col-md-4">
  <div class="card mb-4 shadow-sm">
    <% if ticket.image? %>
      <%= image_tag ticket.image.url(:thumb), width: 150, height: 150 %>
    <% else %>
      <%= image_tag "learning_english.png", width: 150, height: 150 %>
    <% end %>
    <div class="card-body"><hr>
      <h5 style="color: red">
        <%= link_to(truncate("#{ticket.title}", length: 20), intro_path(:code => ticket.code), style: 'text-decoration: none;') %>
      </h5>
      <b class="card-text" style="color: blue">
        <%= truncate("#{ticket.category.title}", length: 20) %>
      </b>
      <p class="card-text" style="color: gray; font-size: 15px;">
        <%= truncate("#{ticket.description}", length: 20) %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group" style="margin: 0 auto;">
          <%#= link_to "View", histories_path, class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to "Start",intro_path(code: ticket.code), class: "btn btn-primary"%>
        </div>
      </div>
    </div>
  </div>
</div>
