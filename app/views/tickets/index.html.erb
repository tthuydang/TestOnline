<h2 style="color: gray">Your Tickets:</h2>
<div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Code</th>
        <th scope="col">Title</th>
        <th scope="col">Category</th>
        <th scope="col" style="text-align: center">Options</th>
      </tr>
    </thead>
    <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.code %></td>
        <td><%= ticket.title %></td>
        <td><%= ticket.category.title %></td>
        <td style="text-align: center">
          <%= link_to("Edit", edit_ticket_path(ticket), class: "btn btn-info") %>
          <%= link_to("Delete", ticket_path(ticket), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-warning") %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to("Add new Ticket", new_ticket_path, class: "btn btn-success") %>
</div>
