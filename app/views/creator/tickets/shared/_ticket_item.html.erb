<tr>
  <td><%= ticket.code %></td>
  <td><%= ticket.title %></td>
  <td><%= ticket.category.title %></td>
  <td style="text-align: center">
    <%= link_to("Details", root_path, class: "btn btn-info") %>
    <%= link_to("Edit", edit_ticket_path(ticket), class: "btn btn-primary") %>
    <%= link_to("Delete", ticket_path(ticket), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-warning") %>
  </td>
</tr>
